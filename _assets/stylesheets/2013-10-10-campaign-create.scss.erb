@import "compass";
@import "base";

// reset
// -----------------------------------------------------------
ul { list-style: none;}

.clearfix {
  @include pie-clearfix;
}

// tabs
// -----------------------------------------------------------

.tab {
  display: none;
  z-index: -1;
  position: absolute;
  top: 105px;
  bottom: 0;
  width: 100%;
}

// header
// -----------------------------------------------------------
.header {
  background: url(<%= asset_data_uri '2013-10-10-campaign-create-dashboard-header-normal.png' %>) no-repeat;
  height: 205px;
  width: 1200px;
  position: relative;
}

.header--new-campaign-bg {
  background-image: url(<%= asset_data_uri '2013-10-10-campaign-create-new-campaign-header.png' %>) !important;
  background-size: 100%;
}


// buttons
// -----------------------------------------------------------
.new-campaign-button {
  display: block;
  position: absolute;
  top: 30px;
  right: 1px;
  width: 96px;
  height: 96px;
  background: url(<%= asset_data_uri '2013-10-10-campaign-create-plus-icon.png' %>) center no-repeat;
  border-left: 1px solid #dbdbdb;
  font-size: 14px;
  &:hover {
    background-color: rgb(240,240,240);
  }
}

.input-hug {
  @include border-left-radius(0);
}

.design-link {
  font-size: 12px;
  color: $centro-brand-1b;

  &:hover {
    color: lighten($centro-brand-1b, 5%);
    text-decoration: underline;
  }
}

.show-example {
  margin-top: 4px;
}

.close {
  width: 30px;
  padding-top: 4px !important;
  font-size: 12px;
  text-align: center;
  color: $grayscale-1;
  &:hover { color: $centro-alert-1; }
}

// overlay
// -----------------------------------------------------------
.overlay {
  background: rgba(255,255,255, 0.8);
  display: none;
  height: 100%;
  font-size: 0;
  overflow: hidden;
  position: fixed;
  right: 0;
  bottom: 0;
  left: 0;
  top: 0;
  text-align: center;
  z-index: 10;
}

.overlay:after {
  content: '';
  display: inline-block;
  height: 100%;
  vertical-align: middle;
}

.overlay__container {
  box-shadow: 0px 2px 4px rgba(0,0,0,0.1);
  display: inline-block;
  border: 1px solid #CBCBCB;
  background-color: white;
  height: 75%;
  font-size: 1rem;
  vertical-align: middle;
  width: 500px;
  position: relative;
  text-align: left;
}

.overlay__header {
  padding: 20px 20px 0 20px;  
  border-bottom: 1px solid $grayscale-1;
  position: relative;
}

.overlay__close {
  position: absolute;
  top: 10px;
  right: 10px;
  font-size: 14px;
  color: $grayscale-1;
  z-index: 10;
  &:hover { color: $grayscale-2; }
}

.overlay__header h1 {
  font-size: 32px;
  font-weight: 300;
  line-height: 1;
  margin: 0 0 18px;
}

.overlay__nav {
  height: 34px;
  list-style: none;
  font-size: 0;
}

.overlay__nav > li {
  color: lighten($grayscale-1, 8%);
  cursor: pointer;
  line-height: 30px;
  display: inline-block;
  margin-right: 20px;
  font-size: 14px;

  &:last-of-type {
    margin-right: 0;
  }

  &.s-is-current {
    position: relative;
    color: $grayscale-5;
    //border-bottom: 4px solid $grayscale-0;
    text-align: center;

    &:before {
      content: "";
      display: block;
      border-left: 7px solid transparent;
      border-right: 7px solid transparent;
      border-bottom: 7px solid $grayscale-1;
      height: 0;
      margin-left: -7px;
      position: absolute;
        bottom: -5px;
        left: 50%;
      width: 0;
      z-index: 101;
    }

    &:after {
      content: "";
      display: block;
      border-left: 6px solid transparent;
      border-right: 6px solid transparent;
      border-bottom: 6px solid white;
      height: 0;
      margin-left: -6px;
      position: absolute;
        bottom: -6px;
        left: 50%;
      width: 0;
      z-index: 102;
    }
  }
}

