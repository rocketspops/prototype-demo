.overlay__body {
  top: 0;
  bottom: 72px;
  width: 100%;
  position: absolute;
  padding: 18px 18px 30px 20px;
  overflow: auto;
  
  background:
    /* Shadow covers */
    linear-gradient(white 30%, rgba(255,255,255,0)),
    linear-gradient(rgba(255,255,255,0), white 70%) 0 100%,
    
    /* Shadows */
    radial-gradient(farthest-side at 50% 0, rgba(0,0,0,.2), rgba(0,0,0,0)),
    radial-gradient(farthest-side at 50% 100%, rgba(0,0,0,.2), rgba(0,0,0,0)) 0 100%;
  background-repeat: no-repeat;
  background-color: white;
  background-size: 100% 30px, 100% 30px, 100% 5px, 100% 5px;
  
  background-attachment: scroll, local, scroll, scroll;
}

.overlay__footer {
  @include pie-clearfix;
  background: lighten($grayscale-0, 8%);
  border-top: 1px solid $grayscale-1;
  font-size: 0;
  height: 72px;
  padding: 20px;
  position: absolute;
  width: 100%;
  bottom: 0;
}

// form styles
// -----------------------------------------------------------
.form-field {
  margin-bottom: 12px;
  &.last { margin-bottom: 0; }
}

label {
  font-size: 14px;
  line-height: 1;
  color: $grayscale-3;
}

input[type="text"],
textarea {
  display: block; 
  width: 100%;
  padding: 8px;
  background: transparent;
  border: 1px solid $grayscale-1;
  box-shadow: inset 0 1px 3px hsla(0, 0, 0, 0.1);
  font-size: 14px;
  resize: none;
  outline: none;
}

textarea {
  line-height: 1.25;
  height: 72px;
  &:focus {
    border-color: $centro-brand-1b;
  }
}

input[type="text"] {
  height: 30px;
  padding: 0 8px;
  &:focus {
    border-color: $centro-brand-1b;
  }
}

input[disabled] {
  background: lighten($grayscale-0, 8%);
  box-shadow: none;
  color: $grayscale-2; 
  cursor: not-allowed !important; 
}

input::-webkit-input-placeholder,
textarea::-webkit-input-placeholder {
  color: $grayscale-2; 
  cursor: text;
}

input.error { border-color: lighten($centro-alert-1, 5%) !important; }

input:focus::-webkit-input-placeholder,
textarea:focus::-webkit-input-placeholder { opacity: 0.5; }

.faux-input {
  border: 1px solid $grayscale-1;
  box-shadow: inset 0 1px 3px hsla(0, 0, 0, 0.1);
}

.input-no-styles {
  border-width: 0 !important;
  box-shadow: none !important;
}

.client-name {
  width: 280px;
  margin-right: 20px;
}

.unique-id {
  width: 160px;
}

.flight-dates {
  position: relative;
  display: inline-block;
  margin-bottom: 6px !important;
}

.flight-date {
  > li {
    position: relative;
    margin-bottom: 6px;
    &:last-child { margin-bottom: 0; }
  }
}

.date-range {
  position: relative;
  display: inline-block;
}

.date-range > input[type="text"] {
  position: relative;
  width: 100px;
  margin-bottom: 0;
}

.range {
  display: inline-block;
  padding: 0 5px;
  color: $grayscale-1;
}

.i-calendar {
  z-index: 1;
  display:block;
  position: absolute;
  top: 0;
  right: 0;
  width: 30px;
  cursor: pointer;
  outline: none;
  border: none;
  font-size: 12px;
  line-height: 30px;
  text-align: center;
  color: $grayscale-1;
}

.i-calendar--clicked,
.i-calendar:hover {
  color: $centro-brand-1b;
}

#datepicker {
  display: none;
  position: absolute;
  width: 266px;
  height: 236px;
  background: url(<%= asset_data_uri '2013-10-10-campaign-create-datepicker-center.png' %>) no-repeat;

  &.start,
  &.end {
    display: block;
    top: 0;
    z-index: 1001;
  }

  &.start { left: 322px; }
  &.end   { left: 322px+124px; }
  z-index: 1001;
}

#datepicker-overlay {
  display: none;
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  z-index: 1000;
  &.open { display: block; }
}

.last-field input[type="text"] {
  margin-bottom: 0;
}

.auto-search:focus,
.is-adjacent {
 border-bottom: 1px dashed $grayscale-0 !important;
}

.tag-group {
  display: none;
  padding: 8px 0 0 8px;
  border: 1px solid $grayscale-1;
  border-top: none;
  &.open {
    display: block;
  }
}

.clearfix {
  @include pie-clearfix;
}

.gender,
.age {
  margin-right: 20px;
  width: 120px;
}

.income { width: 180px; }

.tag-group.focus {
  border-color: $centro-brand-1b;
}

.tag {
  display: inline-block;
  margin: 0 8px 8px 0;
  line-height: 24px;
  vertical-align: middle;
  
  > .close { 
    @include border-right-radius(3px);
    @include background-image (linear-gradient(lighten($centro-brand-1d, 13%), lighten($centro-brand-1d, 9%) ));
    display: inline-block;
    width: 20px;
    padding-top: 2px !important;
    font-size: 8px;
    line-height: 22px;
    color: desaturate(darken($centro-brand-1d, 12%), 12%);
    text-shadow: 0 1px 0 rgba(white, 0.5);
    border: 1px solid desaturate(lighten($centro-brand-1d, 5%), 15%);
    border-width: 1px 1px 1px 0;

    &:hover { color: $centro-alert-1; }
  }
}

.tag-value {
  @include border-left-radius(3px);
  @include background-image (linear-gradient(lighten($centro-brand-1d, 13%), lighten($centro-brand-1d, 9%) ));
  position: relative;
  display: inline-block;
  border: 1px solid desaturate(lighten($centro-brand-1d, 5%), 15%);
  font-size: 12px;
  color: $centro-brand-1a;
  text-shadow: 0 1px 0 rgba(white, 0.3);
  padding: 0 6px;
}

.name b {
  color: $centro-brand-1b;
}


// state styles
// -----------------------------------------------------------
.s-is-hidden {
  display: none;
}

.is-visible {
  display: block !important;
  z-index: 1;
}

/* @group jQuery Overrides */

.ui-menu {
  display:block;
  list-style:none;
  margin: 0;
  padding: 2px;
}

.ui-menu .ui-menu { margin-top: -3px; }

.ui-menu .ui-menu-item {
  font-size: 14px;
  line-height: 24px;
  margin:0;
  padding: 0;
  width: 100%;
}

.ui-menu .ui-menu-item a {
  color: $grayscale-5;
  display:block;
  line-height: 18px;
  margin: 0;
  padding: 6px 8px 4px 8px;
  text-decoration:none;
  zoom:1;
}

.ui-menu .ui-menu-item {
  //border-bottom: 1px solid rgb(220,220,220); 
  &:last-child {
    border-bottom: none;
  }
}

//.ui-menu .ui-menu-item a.ui-state-hover,
//.ui-menu .ui-menu-item a.ui-state-active { margin: -1px; }

.ui-menu {
  display: block;
  list-style: none;
  margin: 0;
  outline: none;
  padding: 2px;
}

.ui-autocomplete {
  @include box-shadow(0 2px 2px rgba(black, 0.1));
  background:  white;
  border-radius: 0;
  border: 1px solid $centro-brand-1b;
  border-top: none;
  color: $grayscale-5;
  cursor: pointer;
  font-family: "source-sans-pro";
  font-size: 1rem;
  padding: 0px;
  position: absolute;
  z-index: 1000;
  width: 460px !important;

  max-height: 113px;
  overflow-y: auto;
  overflow-x: hidden;
  &.client { width: 280px !important; }
}

.ui-state-focus,
.ui-state-focus b {
  background: $centro-brand-1b;
  color: white !important;
  border-radius: 0;
  border: none;
}

.ui-helper-hidden-accessible { display: none; }

