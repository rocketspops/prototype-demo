@import "compass";
@import "base";

// reset
// -----------------------------------------------------------
ul { list-style: none;}

// header
// -----------------------------------------------------------
.header {
  background: url(<%= asset_data_uri '2013-10-10-campaign-create-dashboard-header-normal.png' %>) no-repeat;
  height: 205px;
  width: 1200px;
  position: relative;
}

.header--new-campaign-bg {
  background-image: url(<%= asset_data_uri '2013-10-10-campaign-create-new-campaign-header.png' %>) !important;
  background-size: 100%;
}


// buttons
// -----------------------------------------------------------
.new-campaign-button {
  display: block;
  position: absolute;
  top: 30px;
  right: 1px;
  width: 96px;
  height: 96px;
  background: url(<%= asset_data_uri '2013-10-10-campaign-create-plus-icon.png' %>) center no-repeat;
  border-left: 1px solid #dbdbdb;
  font-size: 14px;
  &:hover {
    background-color: rgb(240,240,240);
  }
}

.button {
  @include border-radius(3px);
  @include background-image (linear-gradient(lighten(rgb(220, 227, 229), 10%), rgb(220, 227, 229)));
  position: relative;
  padding: 5px 6px;
  font-size: 14px;
  line-height: normal;
  color: rgb(65, 82, 88);
  text-shadow: hsla(100, 0%, 100%, 0.5);
  border: 1px solid darken(rgb(220, 227, 229), 15%);
  &:hover {
    color: darken(rgb(65, 82, 88), 5%);
  }
}

.button--primary {
  @extend .button;
  @include background-image (linear-gradient(lighten(rgb(0, 164, 219), 10%), rgb(0, 164, 219)));
  color: white;
  text-shadow: hsla(0, 0%, 0%, 0.2);
  border: 1px solid darken(rgb(0, 164, 219), 4%);

  &:hover {
    color: white;
  }
}

.input-hug {
  @include border-left-radius(0);
}

.design-link {
  color: rgb(0, 164, 219);

  &:hover {
    color: lighten(rgb(0, 164, 219), 5%);
    text-decoration: underline;
  }
}

.close {
  position: absolute;
  top: 50%;
  right: -16px;
  width: 10px;
  height: 10px;
  margin-top: -5px;
  background: url(<%= asset_data_uri '2013-10-10-campaign-create-close.png' %>) no-repeat 0 0;
  background-size: 100%;
}

// overlay
// -----------------------------------------------------------
.overlay {
  background: rgba(255,255,255, 0.8);
  display: none;
  height: 100%;
  font-size: 0;
  overflow: hidden;
  position: fixed;
  right: 0;
  bottom: 0;
  left: 0;
  top: 0;
  text-align: center;
  z-index: 10;
}

.overlay:after {
  content: '';
  display: inline-block;
  height: 100%;
  vertical-align: middle;
}

.overlay__container {
  box-shadow: 0px 2px 4px rgba(0,0,0,0.1);
  display: inline-block;
  border: 1px solid #CBCBCB;
  background-color: white;
  font-size: 1rem;
  vertical-align: middle;
  width: 500px;
  position: relative;
  text-align: left;
}

.overlay__header {
  padding: 20px 20px 0 20px;
  border-bottom: 1px solid rgb(204,204,204);
}

.overlay__close {
  background: url(<%= asset_data_uri '2013-08-16-campaign-notes-delete-btn.png' %>) no-repeat center center;
  position: absolute;
  width: 14px;
  top: 10px;
  height: 14px;
  right: 8px;
}

.overlay__header h1 {
  font-size: 32px;
  font-weight: 300;
  line-height: 1;
  margin: 0 0 18px;
}

.overlay__nav {
  list-style: none;
  font-size: 0;
}

.overlay__nav > li {
  display: inline-block;
  margin-right: 20px;
  font-size: 14px;

  &:last-of-type {
    margin-right: 0;
  }

  &.s-is-current {
    &:after {
      display: block;
      content: " ";
      width: 100%;
      height: 4px;
      background: rgb(216,216,216);
      border: 1px solid rgb(204,204,204);
      border-bottom: none;
      text-align: center;
    }
  }
}

.overlay__nav > li > a {
  display: block;
  margin-bottom: 6px;
  color: rgb(202,202,202);
}

.overlay__nav > li.s-is-current > a {
  color: rgb(57,57,57);
}

.overlay__body {
  max-height: 408px;
  padding: 18px 18px 30px 20px;
    background:
  /* Shadow covers */
  linear-gradient(white 30%, rgba(white,0)),
  linear-gradient(rgba(white,0), white 70%) 0 100%,
  /* Shadows */
  radial-gradient(farthest-side at 50% 0, rgba(black,0.2), rgba(black,0)),
  radial-gradient(farthest-side at 50% 100%, rgba(black,0.2), rgba(black,0)) 0 100%;
  background-repeat: no-repeat;
  background-color: white;
  background-size: 100% 40px, 100% 40px, 100% 5px, 100% 5px;
  background-attachment: local, local, scroll, scroll;
  //background-position: center top;
  overflow: auto; 
}

.overlay__footer {
  @include pie-clearfix;
  background: rgb(240, 240, 240);
  border-top: 1px solid rgb(203, 203, 203);
  font-size: 0;
  height: 72px;
  padding: 18px 20px;
  position: relative;
}

// form styles
// -----------------------------------------------------------
label {
  font-size: 14px;
  line-height: 1;
  color: rgb(155,155,155);
}

input[type="text"],
textarea {
  display: block; 
  width: 100%;
  margin-bottom: 12px;
  padding: 8px;
  border: 1px solid rgb(204,204,204);
  box-shadow: inset 0 1px 3px hsla(0, 0, 0, 0.1);
  font-size: 14px;
  resize: none;
  outline: none;
}

input[type="text"] {
  height: 30px;
  padding: 0 8px;
  &:focus {
    border-color: $centro-brand-normal;
  }
}

input[disabled] {
  cursor: not-allowed !important; 
  color: $centro-gray-3; 
}



.faux-input {
  background: white;
  border: 1px solid rgb(204,204,204);
  box-shadow: inset 0 1px 3px hsla(0, 0, 0, 0.1);
}

.input-no-styles {
  background: transparent !important;
  border-width: 0 !important;
  box-shadow: none !important;
}

.campaign-name {
  width: 280px;
  margin-right: 20px;
}

.unique-id {
  width: 160px;
}

.flight-dates {
  position: relative;
  display: inline-block;
  margin-bottom: 4px;
}

.flight-date {
  > li {
    position: relative;
    margin-bottom: 6px;
    &:last-child { margin-bottom: 0; }
  }
}

.date-range {
  position: relative;
  display: inline-block;
}

.date-range > input[type="text"] {
  position: relative;
  width: 100px;
  margin-bottom: 0;
}

.range {
  display: inline-block;
  padding: 0 5px;
  color: rgb(200,200,200);
}

.i-calendar {
  z-index: 1;
  display:block;
  position: absolute;
  top: 0;
  right: 0;
  width: 30px;
  height: 30px;
  background: url(<%= asset_data_uri '2013-10-10-campaign-create-calendar-icon.png' %>) 0 0 no-repeat;
  cursor: pointer;
  outline: none;
  border: none;
}

.i-calendar--clicked,
.i-calendar:hover {
  background-position: 0 -30px;
}

#datepicker {
  display: none;
  position: absolute;
  width: 266px;
  height: 236px;
  background: url(<%= asset_data_uri '2013-10-10-campaign-create-datepicker-center.png' %>) no-repeat;

  &.start,
  &.end {
    display: block;
    top: 0;
    z-index: 1001;
  }

  &.start { left: 321px; }
  &.end   { left: 321px+122px; }
}

#add-flight-date {
  font-size: 12px;
}

.account-team input[type="text"] {
  margin-bottom: 0;
}

.account-team .button {
  height: 30px;
}

.auto-search:focus,
.is-adjacent {
 border-bottom: 1px dashed rgb(220,220,220) !important;
}

.tag-group {
  display: none;
  padding: 8px 0 0 8px;
  border: 1px solid rgb(204,204,204);
  border-top: none;
  &.open {
    display: block;
  }
}

.tag-group.focus {
  border-color: $centro-brand-normal;
}

.tag {
  @include border-radius(3px);
  position: relative;
  display: inline-block;
  background: rgb(230,230,230);
  border: 1px solid rgb(202,202,202);
  font-size: 12px;
  padding: 4px 22px 4px 6px;
  margin: 0 8px 8px 0;
  > .close { right: 6px; }
}

.name b {
  color: $centro-brand-normal;
}


// state styles
// -----------------------------------------------------------
.s-is-hidden {
  display: none;
}

/* @group jQuery Overrides */

.ui-menu {
  display:block;
  list-style:none;
  margin: 0;
  padding: 2px;
}

.ui-menu .ui-menu { margin-top: -3px; }

.ui-menu .ui-menu-item {
  font-size: 14px;
  line-height: 24px;
  margin:0;
  padding: 0;
  width: 100%;
}

.ui-menu .ui-menu-item a {
  color: rgb(50,50,50);
  display:block;
  line-height: 18px;
  margin: 0;
  padding: 6px 8px 4px 8px;
  text-decoration:none;
  zoom:1;
}

.ui-menu .ui-menu-item {
  //border-bottom: 1px solid rgb(220,220,220); 
  &:last-child {
    border-bottom: none;
  }
}

//.ui-menu .ui-menu-item a.ui-state-hover,
//.ui-menu .ui-menu-item a.ui-state-active { margin: -1px; }

.ui-menu {
  display: block;
  list-style: none;
  margin: 0;
  outline: none;
  padding: 2px;
}

.ui-autocomplete {
  @include box-shadow(0 2px 2px rgba(black, 0.1));
  background:  white;
  border-radius: 0;
  border: 1px solid $centro-brand-normal;
  border-top: none;
  color: rgb(50,50,50);
  cursor: pointer;
  font-family: "source-sans-pro";
  font-size: 1rem;
  padding: 0px;
  position: absolute;
  z-index: 1000;
  width: 460px !important;

  max-height: 113px;
  overflow-y: auto;
  overflow-x: hidden;
}

.ui-state-focus,
.ui-state-focus b {
  background: $centro-brand-normal;
  color: white !important;
  border-radius: 0;
  border: none;
}

.ui-helper-hidden-accessible { display: none; }

/* @end */

#unique-id {
  font-family: "source-code-pro";
  padding-top: 1px;
}

.psuedo-focus:focus {
  border-bottom: 1px solid $centro-brand-normal !important;
}

