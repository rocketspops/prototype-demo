#unique-id {
  font-family: "source-code-pro";
  padding-top: 1px;
}

.psuedo-focus:focus {
  border-bottom: 1px solid $centro-brand-1b !important;
}

// Dropdown

.m-form__dropdown {
  @include transition(none !important);
  @include box-shadow(inset 0 1px 2px rgba(black, 0.1));
  display: inline-block;
  border: 1px solid $grayscale-1;
  background: white;
  line-height: 30px;
  height: 30px;
  padding: 0 8px;
  position: relative;
  width: 100%;
  font-size: 14px;
  outline: 0;
  -webkit-font-smoothing: antialiased;
}

.m-form__dropdown__selected {
  color: $grayscale-5;
  cursor: pointer;
  display: block !important;
  margin-bottom: 0 !important;
  position: relative;
  z-index: 1003;
  &.placeholder {
    color: $grayscale-2; 
  }
}

.m-form__dropdown__selected:after {
  color: $grayscale-1;
  content: "\25BE";
  font-size: 14px;
  height: 1em;
  line-height: 1em;
  margin-top: -0.5em;
  position: absolute;
  top: 50%;
  right: -6px;
  width: 1em;
}

.m-form__dropdown.s-is-open .m-form__dropdown__selected.placeholder {
  color: rgba($grayscale-2, 0.5);
}

.m-form__dropdown.s-is-open .m-form__dropdown__selected:after {
  color: $grayscale-2;
}

.m-form__dropdown ul {
  @include box-shadow(0 4px 2px -2px rgba(black, 0.1));
  background: white;
  border: 1px solid $centro-brand-1b;
  border-top-width: 0;
  color: $grayscale-5;
  display: none;
  position: absolute;
    left: -1px;
    right: -1px;
    top: 28px;
  line-height: 1em;
  z-index: 1002;
}

.m-form__dropdown li {
  height: 24px;
  line-height: 24px;
  overflow: hidden;
}

.m-form__dropdown li a {
  color: $grayscale-3;
  display: block;
  padding: 0 8px; 
  position: relative;
  &:hover {
    color: $grayscale-5;
  }
  &.s-is-active {
    background: $centro-brand-1b;
    color: white;
  }
}

.m-form__dropdown li a.s-is-active {
  background: $centro-brand-1b;
  color: white;
}

.m-form__dropdown.s-is-open,
.m-form__dropdown:focus {
  // @include box-shadow(none);
  border-color: $centro-brand-1b;
  cursor: pointer;
  outline: none;
}

.m-form__dropdown.s-is-open ul {
  display: block;
}

.m-form__dropdown .m-form__dropdown__overlay {
  display: none;
  z-index: 1001;
}

.m-form__dropdown.s-is-open .m-form__dropdown__overlay {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  display: block;
}

//

label.required:after {
  content: '*';
  color: $centro-alert-1;
  padding-left: 1px;
}

.required-note {
  line-height: 1em;
  color: $grayscale-2;
  position: absolute;
  bottom: 12px;
  right: 20px;
  font-size: 14px;
  span { color: $centro-alert-1; }
}

