::-webkit-scrollbar {
  width: 0;
  height: 0;
}

.help-trigger {
  display: inline-block;
  position: relative;
}

.help-tooltip {
  @include box-shadow(0 5px 2px -4px rgba(black, 0.08));
  @include transition(all linear 0s 0.1s);
  position: absolute;
    top: 0;
    right: 288px;
  z-index: 1003;
  width: 200px;
  padding: 6px 10px 8px;
  font-size: 12px;
  line-height: 1.25;
  color: $grayscale-4;
  background: $centro-alert-2;
  border: 1px solid darken($centro-alert-2, 10%);

  > .close {
    position: absolute;
      top: 0;
      right: 0;
    width: 20px;
    height: 18px;
    padding-top: 6px !important;
    font-size: 8px;
    color: darken($centro-alert-2, 36%);
    text-shadow: 0 1px 0 rgba(white, 0.5);

    &:hover { color: $centro-alert-1; }
  }
}

.has-help-text {
  display: inline-block;
  width: 100%;
  position: relative;
  a { position: absolute; top: 2px; right: 0; }
}
