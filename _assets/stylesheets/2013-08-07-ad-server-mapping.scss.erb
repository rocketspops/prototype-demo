/* @group Header */

.header {
  background: url(<%= asset_data_uri '2013-08-07-ad-server-mapping-mapping_panel.png' %>) no-repeat;
  position: relative;
  height: 660px;
  width: 450px;
}

.header a {
  outline: none;
  position: absolute;
}

.header--trigger {
  height: 16px;
  left: 293px;
  top: 633px;
  width: 134px;
}

/* @end */

/* @group Overlay */

.overlay {
  background: rgba(255,255,255, 0.9);
  display: none;
  height: 100%;
  font-size: 0;
  overflow: hidden;
  position: fixed;
  right: 0;
  bottom: 0;
  left: 0;
  text-align: center;
  z-index: 10;
}

.overlay:after {
  content: '';
  display: inline-block;
  height: 100%;
  vertical-align: middle;
}

.overlay__container {
  box-shadow: 0px 2px 4px rgba(0,0,0,0.1);
  display: inline-block;
  border: 1px solid #CBCBCB;
  background: white url(<%= asset_data_uri '2013-08-07-ad-server-mapping-overlay.png' %>) no-repeat center;
  font-size: 1rem;
  vertical-align: middle;
  height: 597px;
  width: 741px;
  padding: 20px;
  position: relative;
  text-align: left;
  vertical-align: middle;
}

.overlay__close {
  height: 16px;
  position: absolute;
  right: 5px;
  top: 5px;
  width: 16px;
}

.overlay__select {
  position: absolute;
  width: 369px;
  top: 132px;
  height: 48px;
  right: 0;	
}

.overlay__source-wrapper {
  position: absolute;
  left: 0;
  top: 112px;
  width: 370px;
}

.overlay__source-wrapper svg {
  position: absolute;
  left: 22px;
  top: 12px;
}

.source-facebook {
  display: none;
  height: 55px;
  width: 370px;
}

.icon-link {
  display: none;
  position: absolute;
  left: 380px;
  top: 35px;
}

.source-remove {
  background: url(<%= asset_data_uri '2013-08-07-ad-server-mapping-delete-button.png' %>) no-repeat center top;
  position: absolute;
  top: 13px;
  left: 22px;
  height: 24px;
  width: 24px;
  z-index: 2;
}

.source-remove:hover { 
  background-position: center -24px;
}

.remove-confirm {
  background-color: #e4efdd;
  display: none;
  font-size: 14px;
  height: 55px;
  width: 370px;
  padding: 18px 5px 10px 38px;
}

.remove-confirm a {
  position: relative;
  margin-left: 5px;
}


/* @end */

