@import "compass";

.header {
  background: url(<%= asset_data_uri '2013-08-13-date-picker-widget-background.png' %>) no-repeat;
  position: relative;
  height: 50px;
  width: 640px;
}

.header input {
  background: transparent;
  border: none;
  font-family: "Source Sans Pro";
  font-size: 14px;
  outline: none;
  height: 30px;
  padding: 0 8px;
  position: absolute;
  top: 11px;
  left: 303px;
  width: 96px;
}

.header input:-moz-placeholder { color: rgb(190, 203, 207); }
.header input::-moz-placeholder { color: rgb(190, 203, 207); }
.header input::-webkit-input-placeholder { color: rgb(190, 203, 207); }

.calendar-icon {
  background:  url(<%= asset_data_uri '2013-08-13-date-picker-widget-calendar-icon.png' %>) no-repeat center -19px;
  position: absolute;
    top: 19px;
    left: 375px;
  display: block;
  height: 16px;
  width: 16px;
}

.calendar-icon.s-is-active { background-position: center 1px; }

.date-picker {
  background: url(<%= asset_data_uri '2013-08-13-date-picker-widget-tooltip-bg.png' %>) no-repeat;
  height: 237px;
  position: absolute;
    left: 150px;
    top: 37px;
  width: 268px;
  visibility: hidden;
  pointer-events: none;
}

.date-picker.s-is-visible {
  visibility: visible;
  pointer-events: auto;
}

.date-picker__header {
  background: url(<%= asset_data_uri '2013-08-13-date-picker-widget-tooltip-header.png' %>) no-repeat;
  font-size: 0;
  font-weight: 300;
  height: 37px;
  width: 260px;
  position: absolute;
  overflow: visible;
  top: 10px;
  left: 5px;
}

.date-picker__header p {
  display: inline-block; 
  font-size: 20px;
  line-height: 36px;
  padding: 0 10px;

  &.month { 
    position: relative;
    width: 153px; 
  }
  &.year { 
    position: relative;
    width: 105px; 
  }
}

.date-picker__help {
  background: url(<%= asset_data_uri '2013-08-13-date-picker-widget-help-tip.png' %>) no-repeat center center;
  position: absolute;
  height: 40px;
  width: 268px;
  bottom: -30px;
  z-index: 150;
}

.month__dropdown, 
.year__dropdown {
  position: absolute;
  right: 8px;
  top: 10px;
  height: 16px;
  width: 16px;
  z-index: 200;
}

.year__dropdown {
  right: 6px;
}

.year-select:after {
  background: url(<%= asset_data_uri '2013-08-13-date-picker-widget-blue-arrow.png' %>) no-repeat center center;
  background-size: 100%;
  content: "";
  position: absolute;
  right: 20px;
  top: -10px;
  height: 11px;
  width: 20px;
}

.month-select,
.year-select { 
  pointer-events: none;
  visibility: hidden; 
}

.month-select.s-is-visible,
.year-select.s-is-visible { 
  pointer-events: auto;
  visibility: visible; 
}

.month-select,
.year-select {
  position: absolute;
  left: -1px;
  top: -1px;
  border: 1px solid #00BAF6;
  z-index: 100;
  height: 222px;
  width: 155px;
}

.year-select {
  width: 106px;
  left: auto;
  right: 1px;
  top: -1px;
}

.month-select ul,
.year-select ul {
  background:
  /* Shadow covers */
  linear-gradient(white 30%, rgba(white ,0)),
  /* Shadows */
  radial-gradient(farthest-side at 50% 0, rgba(black, 0.25), rgba(black ,0));
  background-repeat: no-repeat;
  background-color: white;
  background-size: 100% 40px, 110% 5px;
  background-attachment: local, scroll;
  background-position: center top;
  list-style-type: none;
  font-size: 20px;
  top: 36px;
  bottom: 0;
  width: 100%;
  overflow: auto;
  position: absolute;
}

.date-picker__header ul li {
  color: rgb(150,150,150);
  cursor: pointer;
  padding: 8px 10px;
  line-height: 1;
  &:hover { color: rgb(50,50,50); }
  &.s-is-active {
    background: #00BAF6;
    color: white;
  }
}

.date-picker__body {
  background: url(<%= asset_data_uri '2013-08-13-date-picker-widget-2013-calendar.png' %>) no-repeat center top;
  display: none;
  position: absolute;
  top: 47px;
  height: 183px;
  width: 258px;
  left: 5px;
}

.date-picker__body.january   { background-position: left  0px; }
.date-picker__body.february  { background-position: left -183px; }
.date-picker__body.march     { background-position: left -183px * 2; }
.date-picker__body.april     { background-position: left (-183px * 3); }
.date-picker__body.may       { background-position: left (-183px * 4); }
.date-picker__body.june      { background-position: left (-183px * 5); }
.date-picker__body.july      { background-position: left (-183px * 6); }
.date-picker__body.august    { background-position: left (-183px * 7); }
.date-picker__body.september { background-position: left (-183px * 8); }
.date-picker__body.october   { background-position: left (-183px * 9); }
.date-picker__body.november  { background-position: left (-183px * 10) - 1; }
.date-picker__body.december  { background-position: left (-183px * 11) - 1; }

.date-picker__body.s-is-visible {
  display: block;
}

.date-picker__body .date-select {
  @include border-radius(50%);
  border: 1px solid transparent;
  cursor: pointer;
  position: absolute;
  top: auto; 
  bottom: 6px; 
  right: 43px;
  width: 24px;
  height: 24px;
  &:hover { border-color: #00BAF6; }
  img { 
    display:none; 
    position: absolute;
    margin-top: -12px;
    margin-left: -12px;
    top: 50%;
    left: 50%;
  }
  &.s-is-active img { display: block; }
}

.date-picker__body.september .date-select { right: 186px; }
.date-picker__body.october .date-select   { right: 115px; }
.date-picker__body.november .date-select  { right: 9px; }
.date-picker__body.december .date-select  { right: 186px; }

::-webkit-scrollbar {
  width: 0;
  height: 0;
}
