.context-menu li.active:after {
  border-bottom: 3px solid rgb(214, 214, 214);
  content: '';
  font-size: 0;
  height: 0;
  line-height: 0;
  position: absolute;
    left:0;
    bottom: 0;
  width: 100%;
}

.changeable {
  background: white;
  @include transition(width 0.2s);
  position: relative;
  width: 112px;
  overflow: hidden;
}

.changeable.id {
  font-family: "source-code-pro";
  top: -1px;
  width: 174px;
}

.main {
  overflow: hidden;
}

.table,
.main {
  position: relative;
  width: 1220px;
  height: 464px;
}

.table img {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 0;
  &.visible {
    z-index: 1;
  }
}

.table-overlay {
  @include opacity(0);
  @include transition(opacity 0.2s);
  background: white;
  position: absolute;
  left: 1px;
  top: 0;
  height: 100%;
  height: 463px;
  text-align: center;
  width: 1218px;
  z-index: 10;
  &.visible {
    @include opacity(1);
  }
  p {
    font-size: 28px;
    font-weight: 600;
    position: relative;
    margin-top: -40px;
    top: 50%;
  }
}

.totals-bar {
  @include transition(bottom ease 0.2s 0s);
  background: white;
  border-top: 1px solid #d6d6d6;
  height: 60px;
  line-height: 60px;
  position: absolute;
  bottom: -70px;
  left: 1px;
  z-index: 10;
  width: 1218px;
  &.stick,
  &.pinned {
    bottom: 1px !important;
  }
}

.totals-trigger:hover + .totals-bar,
.totals-bar:hover {
  @include transition(bottom ease 0.2s 0.2s);
  bottom: 1px;
}

.totals-bar:before {
  @include background-image(linear-gradient(bottom, rgba(50,50,50,0.1), rgba(50,50,50,0)));
  content: "";
  pointer-events: none;
  position: absolute;
    left: 0;
    top: -9px;
  height: 8px;
  width: 100%;
  z-index: 0;
}

.totals-bar input {
  border: none;
  background: transparent;
  color: $centro-brand-normal; 
  font-size:  20px;
  font-weight: 300;
  outline: none;
  padding: 0 15px;
  vertical-align: middle;
  width: 695px;
}

.totals-bar input::-webkit-input-placeholder { color: rgb(180,180,180); }
.totals-bar input:-moz-placeholder {color: rgb(180,180,180); }
.totals-bar input::-moz-placeholder { color: rgb(180,180,180);  }


.totals-bar > ul {
 border-left: 1px solid #d6d6d6;
  list-style-type: none;
  position: absolute;
  top: 0;
  right: 0;
}

.totals-bar > ul > li {
  cursor: default !important;
  border-right: 1px solid #d6d6d6;
  float: left; 
  line-height: 1;
  padding: 13px 15px 0 0;
  position: relative;
  height: 60px;
  &.pacing { width: 100px; }
  &.delivered,
  &.loss { width: 99px; }
  &.contract { width: 128px; }
  &.pushpin { 
    border: none;
    padding: 0; width: 97px; 
    text-align: center;
    overflow: hidden;
    height: 59px;
    a { 
      background-color: #dfe6e8;
      display: inline-block; 
      width: 60px;
      &:hover { background-color: darken(#dfe6e8, 8%); }
      &.active { background-color: $centro-brand-normal; }
      cursor: default !important;
    }
  }
  &.multi:hover {
    cursor: default !important;
  }
}

.planning .pacing      { width: 119px !important;}
.planning .loss        { width: 112px !important;}
.planning .delivered   { width: 88px !important; }
.planning .pushpin     { width: 88px !important; }

.operations .pushpin   { width: 106px !important; }
.operations .pacing    { width: 82px !important;}
.operations .delivered { width: 109px !important; }
.operations .loss      { width: 100px !important;}
.operations .contract  { width: 112px !important;}

.totals-bar > ul > li > p {
  display: none;
  &.active { display: block; }
}

.totals-bar > ul > li span {
  display: block;
  text-align: right;
  font-size: 14px;
}

.totals-bar > ul > li span.num {
  color: rgb(50,50,50);
  font-weight: 300;
  font-size: 18px;
  padding: 0 0 1px 0;
}

.totals-bar > ul > li span.unit {
  color: rgb(180,180,180); 
}

ul.wayfinder {
  list-style-type: none;
  position: absolute;
  left: 6px;
  top: 6px;
}

ul.wayfinder li {
  @include border-radius(50%);
  background-color: #dfe6e8;
  height: 6px;
  width: 6px;
  margin-bottom: 4px;
  &.active {
    background-color: $centro-brand-normal;
  }
}

input:focus + .clickable {
  display: none;
}
