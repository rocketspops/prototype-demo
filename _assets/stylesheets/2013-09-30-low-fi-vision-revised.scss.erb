@import "compass";
@import "base";

.dash-header,
.new-header,
.camp-header {
  background: url(<%= asset_data_uri '2013-09-30-low-fi-vision-revised-dashboard-header-normal.png' %>) no-repeat;
  height: 205px;
  width: 1200px;
  position: relative;
}

.new-header {
  background: url(<%= asset_data_uri '2013-09-30-low-fi-vision-revised-new-campaign-header.png' %>) no-repeat;
}

.camp-header {
  background: url(<%= asset_data_uri '2013-09-30-low-fi-vision-revised-campaign-header.png' %>) no-repeat;
}

.dash-nav, 
.new-nav,
.camp-nav {
  position: absolute;
  left: 1px;
  right: 0px;
  top: 127px;
}

.new-nav,
.camp-nav {
  top: 126px;
}

.dash-nav ul,
.new-nav ul,
.camp-nav ul {
  @include opacity(0);
  list-style-type: none;
  font-size: 14px;
  position: absolute;
  top: 0;
  left: 0;
  display: none;
  &.active { 
    @include opacity(1);
    @include transition(0.1s ease);
    display: block; 
  }
}

.dash-nav li,
.new-nav li, 
.camp-nav li {
  border-color: transparent;
  border-style: solid;
  border-width: 0 1px;
  float: left;
  line-height: 48px;
  padding: 0 15px;
  &.active { 
    background: #e8e8e8; 
    border-color: #d9d9d9;
    &:first-child { border-left: 1px solid transparent; }
  }
  a { 
    color: rgb(50,50,50); 
    display: block;
    height: 100%;
  }
}

.new-nav li,
.camp-nav li {
  line-height: 49px;
}

.camp-content {
  position:relative;
  overflow:hidden;
}

.dash-content > div,
.new-content > div,
.camp-content > div {
  border: 1px solid #dbdbdb;
  border-top: none;
  height: 360px;
  position: relative;
  width: 100%;
}

p.centered {
  @include opacity(0);
  color: #b4b4b4;
  display: none;
  font-weight: 300;
  font-size: 24px;
  position: absolute;
  text-align: center;
  width: 100%;
  line-height: 1;
  height: 24px;
  margin-top: -0.5em;
  top: 50%;
  &.active {
    @include opacity(1);
    @include transition(0.1s ease);
    display: block;
  }
}

.add-campaign {
  background: url(<%= asset_data_uri '2013-09-30-low-fi-vision-revised-plus-icon.png' %>) center no-repeat;
  color: #9d9d9d;
  display: block;
  font-size: 14px;
  border-left: 1px solid #dbdbdb;
  height: 96px;
  width: 96px;
  padding: 0 15px;
  position: absolute;
  top: 30px;
  right: 1px;
  &:hover {
    background-color: rgb(240,240,240);
  }
}

.camp-controls {
  display: none;
  font-size: 14px;
  position: absolute;
  right: 10px;
  top: 134px;
  &.open {
    display:block;
  }
}

.home {
  position: absolute;
  top: 0;
  left: 34px;
  height: 30px;
  width: 100px;
}

.camp-content .camp-sidebar {
  @include transition(right ease 0.25s);
  background: white;
  padding: 20px;
  position: absolute;
  top: 0;
  right: -41%;
  border-color:#dbdbdb;
  border-style: solid;
  border-width: 0 0 0 1px;
  height: 359px;
  width: 40%;
  &:before {
    @include background-image(linear-gradient(right, rgba(50,50,50, 0.1), rgba(50,50,50, 0)));
    content: "";
    height: 100%;
    pointer-events: none;
    position: absolute;
    left: -8px;
    top: 0;
    width: 8px;
    z-index: 0;
  }
  &.open {
    right: 1px;
  }
}

.camp-sidebar ul {
  list-style-type: none;
  font-size: 14px;
  li {
    @include pie-clearfix;
    border-bottom: 1px solid #ddd;  
    line-height: 30px;
    &:last-child {
      border-bottom: none;
    }
    a {
      color: $centro-brand-normal;
      float:right;
    }
  }
}

.camp-sidebar div {
  display:none;
  position:absolute;
  top: 20px;
  left: 20px;
  right: 20px;
  &.open {
    display:block;
  }
  a.js-back {
    font-size: 14px;   
    color: $centro-brand-normal;
    position:absolute;
    top: 2px;
    right: 0;
  }
  
}

