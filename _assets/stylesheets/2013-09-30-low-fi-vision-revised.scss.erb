.overlay {
  background: rgba(255,255,255, 0.7);
  display: none;
  height: 100%;
  font-size: 0;
  overflow: hidden;
  position: fixed;
  right: 0;
  bottom: 0;
  left: 0;
  top: 0;
  text-align: center;
  z-index: 10;
  &.open {
    display: block;
  }
}

.overlay:after {
  content: '';
  display: inline-block;
  height: 100%;
  vertical-align: middle;
}

.overlay__container {
  box-shadow: 0px 2px 4px rgba(0,0,0,0.1);
  display: inline-block;
  border: 1px solid #CBCBCB;
  background: white;
  font-size: 1rem;
  vertical-align: middle;
  width: 500px;
  padding: 20px;
  position: relative;
  text-align: left;
}

.overlay__close {
  position: absolute;
  width: 35px;
  top: 14px;
  height: 16px;
  right: 16px;
}

