@import "compass";
@import "base";

.dash-header {
  background: url(<%= asset_data_uri '2013-09-30-low-fi-vision-revised-dashboard-header-normal.png' %>) no-repeat;
  height: 205px;
  width: 1200px;
}

.dash-nav {
  position: absolute;
  left: 1px;
  right: 0px;
  top: 127px;
}

.dash-nav ul {
  @include opacity(0);
  list-style-type: none;
  font-size: 14px;
  position: absolute;
  top: 0;
  left: 0;
  display: none;
  &.active { 
    @include opacity(1);
    @include transition(0.1s ease);
    display: block; 
  }
}

.dash-nav li {
  border-color: transparent;
  border-style: solid;
  border-width: 0 1px;
  float: left;
  line-height: 48px;
  padding: 0 15px;
  &.active { 
    background: #e8e8e8; 
    border-color: #d9d9d9;
    &:first-child { border-left: 1px solid transparent; }
  }
  a { color: rgb(50,50,50); }
}

.dash-content div {
  border: 1px solid #dbdbdb;
  border-top: none;
  min-height: 360px;
  position: relative;
  width: 100%;
}

p.centered {
  @include opacity(0);
  color: #b4b4b4;
  display: none;
  font-weight: 300;
  font-size: 24px;
  position: absolute;
  text-align: center;
  width: 100%;
  line-height: 1;
  height: 24px;
  margin-top: -0.5em;
  top: 50%;
  &.active {
    @include opacity(1);
    @include transition(0.1s ease);
    display: block;
  }
}

.js-trigger {
  color: $centro-brand-normal;
  display: block;
  font-size: 14px;
  line-height: 1;
  position: absolute;
  bottom: 12px;
  right: 15px;
  &:hover {
    color: darken($centro-brand-normal, 10%);
  }
}

