//= require reset

@import "base";

html,
body {
  height: 100%;
}

a { 
  color:  rgb(50, 50, 50);
  text-decoration: none;
}
a:hover { color: $centro-bright; }
a:focus { outline: none; }

// ----

.m-index-container,
.m-index-container--centered {
  font-size: 0;
  overflow: auto;
  position: absolute;
  top: 0;
  bottom: 0;
  background: url(asset_path('sketch.jpg')) no-repeat center center;
  text-align: center;
  width: 100%;
}

.m-index-container--centered:after {
  content: '';
  display: inline-block;
  vertical-align: middle;
  height: 100%;
}

.m-index-container > * { 
  font-size: 1rem; 
  text-align: left;
}

.m-nav {
  background: white;
  border-bottom: 2px solid rgb(235,235,235);
  font-family: "reenie-beanie";
  font-size: 21px;
  list-style-type: none;
  height: 45px;
  padding: 9px 15px;
  position: fixed;
  left: 0;
  top: 0;
  text-transform: capitalize;
  width: 100%;
  z-index: 1001;
}

.m-nav .external {
  text-transform: none;
}

.m-nav li {
  float: left;
  line-height: 25px;
}

.m-nav li:not(.m-index-logo) {
  position: relative;
  top: 2px;
}

.m-nav .active {
  color: $centro-bright;
}

.m-nav li a {
  display: inline-block;
}

.m-nav-seperator {
  margin: 0 6px;
}

.m-index-logo img {
  display: inline;
  vertical-align: middle;
  height: 15px;
}

.m-index-logo span {
  position: relative;
  top: 2px;
  vertical-align: middle;
}

.m-index-roll {
  background: white;
  border: 2px solid rgb(230,230,230);
  display: inline-block;
  font-size: 21px;
  font-weight: 300;
  list-style-type: none;
  margin: 0 auto;
  overflow: hidden;
  transition: all 0.1s;
  text-align: left;
  vertical-align: middle;
  width: 400px;
}

.m-index-roll:hover {
  border-color: $centro-bright;
}

.m-index-roll li {
  line-height: 1;
  transition: all 0.1s;
}

.m-index-roll li a {
  border-color: transparent;
  border-style: solid;
  border-width: 2px 0;
  display: block;
  overflow: hidden;
  padding: 12px;
  position: relative;
  transition: all 0.1s;
}

.m-index-roll li a:hover {
  background-color: $centro-brighter;
  border-color: $centro-bright;
  color: white;
}

.m-index-roll li:first-child a:hover {
  border-top-color: transparent;
}

.m-index-roll li:last-child a:hover {
  border-bottom-color: transparent;
}

.m-index-roll__stats {
  position: absolute;
  right: 12px;
  top: 13px;
}

.m-index-roll__count {
  font-family: "reenie-beanie";
  font-size: 21px;
  text-align: right;
}

.m-index-roll__count i { position: relative; }

.m-index-roll__count i:nth-child(5n) {
  font-size: 0;
  visibility: hidden;
  &:before {
    @include transform(rotate(60deg) scaleY(1.75));
    content: "l";
    display: inline-block;
    font-size: 21px;
    position: absolute;
      left: -12px;
    visibility: visible;
  }
  &:not(:last-child):after {
    content: "";
    padding-right: 8px;
  }
}

.m-posts-roll {
  display: block;
  list-style-type: none;
  margin: 0 auto;
  padding: 90px 45px 0;
}

.m-posts-roll li {
  float: left;
  margin: 0 45px 45px 0; 
}

.m-posts-roll a {
  display: block;
  font-size: 14px;
  position: relative;
}

.m-posts-roll a > * {
  transition: all 0.1s;
}

.m-posts-roll img {
  border: 2px solid rgb(230,230,230);
  display: block;
  vertical-align: middle;
}

.m-posts-roll a:hover {
  img,
  span { border-color: $centro-bright; }
  span {
    background-color: $centro-brighter;
    color: #fff;
  }
}

.m-posts-roll span {
  background: rgb(235,235,235);
  border-color: rgb(230,230,230);
  border-style: solid;
  border-width: 2px 0 0 0;
  padding: 5px 10px;
  display: block;
  position: absolute;
  bottom: 2px;
  left: 2px;
  right: 2px;
  transition: all 0.1s;
}

.m-static-prototype {
  position: absolute;
  text-align: center;
  width: 100%;
  top: 45px;
  bottom: 0px;
  overflow: auto;
  padding-top: 45px;
}

.m-static-prototype img { display: inline-block; }

.m-static-prototype img.bordered {
  border-color: rgb(214,214,214);
  border-style: solid;
  border-width: 0 1px 1px 1px;
}

.m-comments {
  background: white;
  display: none;
  position: absolute;
  overflow: auto;
  bottom: 0;
  top:  45px;
  right: 0;
  border-left: 2px solid rgb(235,235,235);
  padding: 20px 20px 0 20px;
  width: 500px;
  z-index: 1000;
}

.m-comments.s-is-visible {
  display: block; 
}

.m-comments__count {
  cursor: pointer;
  padding: 0 15px;
  position: absolute !important;
  right: 0px !important;
  top: 0 !important;
  height: 45px;
}

.m-comments__count span {
  background: url(<%= asset_data_uri 'comments.png' %>) no-repeat left top;
  background-size: 25px;
  display: block;
  height: 25px;
  width: 25px;
  text-align: center;
  position: relative;
  top: 13px;
  a,
  a:hover{ 
    color: white; 
    line-height: 16px;
    position: relative;
    width: 100%;
    top: -5px;
  }
}

.m-comments__count.s-is-active {
  background: white;
  border-left: 2px solid rgb(235,235,235) !important;
}

.m-comments__count:hover span,
.m-comments__count.s-is-active span {
  background-position: left -30px;
}

.l-right { float: right !important; }

.m-wrapper {
  overflow: auto;
  padding-top: 45px;
  position: absolute;
    bottom: 0px;
    top: 45px;
  width: 100%;
}

.m-wrapper > div {
  height: 100%;
  margin: 0 auto;
  position: relative;
}

.m-wrapper > div.bordered {
  border: 1px solid rgb(214,214,214);
}

.clickable {
  @include animation(pulsate 2s infinite ease-out);
  @include border-radius(24px);
  @include opacity(0.0);
  border: 2px solid $centro-bright;
  height: 20px;
  width: 20px;
  position: absolute;
  margin-left: -10px;
  margin-top: -10px;
  left: 50%;
  top: 50%;
  pointer-events: none;
  z-index: 10;
}

@include keyframes(pulsate) {
  0% {
    @include opacity(0.0);
    @include transform(scale(0.1, 0.1));
  }

  50% {
    @include opacity(1.0);
  }

  100% {
    @include opacity(0.0);
    @include transform(scale(1.2, 1.2));
  }
}

