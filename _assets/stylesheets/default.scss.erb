//= require reset

@import "base";

html,
body {
  height: 100%;
}

a { 
  color:  rgb(50, 50, 50);
  text-decoration: none;
}
a:hover { color: $centro-bright; }
a:focus { outline: none; }

@font-face {
  font-family: 'redactedregular';
  src: url(asset_path('redacted-regular.woff')) format('woff');
  font-weight: normal;
  font-style: normal;
}

.redacted {
  font-family: 'redactedregular';
  font-size: 14px;
  margin-bottom: 12px;
  color: $centro-gray-4; 
}

@font-face {
  font-family: 'SS Standard';
  src: url(asset_path('ss-standard.woff')) format('woff');
  font-weight: normal;
  font-style: normal;
}

.font-icon {
  cursor: pointer;
  display: inline-block;
  line-height: 1em;
  font-family: "SS Standard";
  font-style: normal;
  font-weight: normal;
  text-decoration: none;
  text-rendering: optimizeLegibility;
  vertical-align: middle;
  white-space: nowrap;
  padding-top: 2px !important;
  -webkit-font-feature-settings: "liga";
  -moz-font-feature-settings: "liga=1";
  -moz-font-feature-settings: "liga";
  -ms-font-feature-settings: "liga" 1;
  -o-font-feature-settings: "liga";
  font-feature-settings: "liga";
  -webkit-font-smoothing: antialiased;
}

// ----

.m-index-container,
.m-index-container--centered {
  font-size: 0;
  overflow: auto;
  position: absolute;
  top: 0;
  bottom: 0;
  background: url(asset_path('sketch.jpg')) no-repeat center center;
  text-align: center;
  width: 100%;
}

.m-index-container--centered:after {
  content: '';
  display: inline-block;
  vertical-align: middle;
  height: 100%;
}

.m-index-container > * { 
  font-size: 1rem; 
  text-align: left;
}

.m-nav {
  background: white;
  border-bottom: 2px solid rgb(235,235,235);
  font-family: "reenie-beanie";
  font-size: 21px;
  list-style-type: none;
  height: 45px;
  padding: 9px 15px;
  position: fixed;
  left: 0;
  top: 0;
  text-transform: capitalize;
  width: 100%;
  z-index: 1001;
}

.m-nav .external {
  text-transform: none;
}

.m-nav li {
  float: left;
  line-height: 25px;
}

.m-nav li:not(.m-index-logo) {
  position: relative;
  top: 2px;
}

.m-nav .active {
  color: $centro-bright;
}

.m-nav li a {
  display: inline-block;
}

.m-nav-seperator {
  margin: 0 6px;
}

.m-index-logo img {
  display: inline;
  vertical-align: middle;
  height: 15px;
}

.m-index-logo span {
  position: relative;
  top: 2px;
  vertical-align: middle;
}

.m-index-roll {
  background: white;
  border: 2px solid rgb(230,230,230);
  display: inline-block;
  font-size: 21px;
  font-weight: 300;
  list-style-type: none;
  margin: 0 auto;
  overflow: hidden;
  transition: all 0.1s;
  text-align: left;
  vertical-align: middle;
  width: 400px;
}

.m-index-roll:hover {
  border-color: $centro-bright;
}

.m-index-roll li {
  line-height: 1;
  transition: all 0.1s;
}

.m-index-roll li a {
  border-color: transparent;
  border-style: solid;
  border-width: 2px 0;
  display: block;
  overflow: hidden;
  padding: 12px;
  position: relative;
  transition: all 0.1s;
}

.m-index-roll li a:hover {
  background-color: $centro-brighter;
  border-color: $centro-bright;
  color: white;
}

.m-index-roll li:first-child a:hover {
  border-top-color: transparent;
}

.m-index-roll li:last-child a:hover {
  border-bottom-color: transparent;
}

.m-index-roll__stats {
  position: absolute;
  right: 12px;
  top: 13px;
}

.m-index-roll__count {
  font-family: "reenie-beanie";
  font-size: 21px;
  text-align: right;
}

.m-index-roll__count i { position: relative; }

.m-index-roll__count i:nth-child(5n) {
  font-size: 0;
  visibility: hidden;
  &:before {
    @include transform(rotate(60deg) scaleY(1.75));
    content: "l";
    display: inline-block;
    font-size: 21px;
    position: absolute;
      left: -12px;
    visibility: visible;
  }
  &:not(:last-child):after {
    content: "";
    padding-right: 8px;
  }
}

.m-posts-roll {
  display: block;
  list-style-type: none;
  margin: 0 auto;
  padding: 90px 45px 0;
}

.m-posts-roll li {
  float: left;
  margin: 0 45px 45px 0; 
}

.m-posts-roll a {
  display: block;
  font-size: 14px;
  position: relative;
}

.m-posts-roll a > * {
  transition: all 0.1s;
}

.m-posts-roll img {
  border: 2px solid rgb(230,230,230);
  display: block;
  vertical-align: middle;
}

.m-posts-roll a:hover {
  img,
  span { border-color: $centro-bright; }
  span {
    background-color: $centro-brighter;
    color: #fff;
  }
}

.m-posts-roll span {
  background: rgb(235,235,235);
  border-color: rgb(230,230,230);
  border-style: solid;
  border-width: 2px 0 0 0;
  padding: 5px 10px;
  display: block;
  position: absolute;
  bottom: 2px;
  left: 2px;
  right: 2px;
  transition: all 0.1s;
}

.m-static-prototype {
  position: absolute;
  text-align: center;
  width: 100%;
  top: 45px;
  bottom: 0px;
  overflow: auto;
  padding-top: 45px;
}

.m-static-prototype img { display: inline-block; }

.m-static-prototype img.bordered {
  border-color: rgb(214,214,214);
  border-style: solid;
  border-width: 0 1px 1px 1px;
}

.bordered {
  border: 1px solid rgb(214,214,214);
  overflow: hidden;
}

.m-comments {
  background: white;
  display: none;
  position: absolute;
  overflow: auto;
  bottom: 0;
  top:  45px;
  right: 0;
  border-left: 2px solid rgb(235,235,235);
  padding: 20px 20px 0 20px;
  width: 500px;
  z-index: 1000;
}

.m-comments.s-is-visible {
  display: block; 
}

.m-comments__count {
  cursor: pointer;
  padding: 0 15px;
  position: absolute !important;
  right: 0px !important;
  top: 0 !important;
  height: 45px;
}

.m-comments__count span {
  background: url(<%= asset_data_uri 'comments.png' %>) no-repeat left top;
  background-size: 25px;
  display: block;
  height: 25px;
  width: 25px;
  text-align: center;
  position: relative;
  top: 13px;
  a,
  a:hover{ 
    color: white; 
    line-height: 16px;
    position: relative;
    width: 100%;
    top: -5px;
  }
}

.m-comments__count.s-is-active {
  background: white;
  border-left: 2px solid rgb(235,235,235) !important;
}

.m-comments__count:hover span,
.m-comments__count.s-is-active span {
  background-position: left -30px;
}

.l-right { float: right !important; }

.l-left { float: left !important; }

.m-wrapper {
  overflow: auto;
  padding-top: 45px;
  position: absolute;
    bottom: 0px;
    top: 45px;
  width: 100%;
}

.m-wrapper > div {
  height: 100%;
  margin: 0 auto;
  position: relative;
}

.m-wrapper > div.bordered {
  border: 1px solid rgb(214,214,214);
}

.clickable {
  @include animation(pulsate 3s infinite ease-out);
  @include border-radius(24px);
  @include opacity(0.0);
  border: 2px solid $centro-bright;
  height: 20px;
  width: 20px;
  position: absolute;
  margin-left: -10px;
  margin-top: -10px;
  left: 50%;
  top: 50%;
  pointer-events: none;
  z-index: 10;
}

input:focus + .clickable { display: none; }

@include keyframes(pulsate) {
  0% {
    @include opacity(0.0);
    @include transform(scale(0.1, 0.1));
  }

  50% {
    @include opacity(1.0);
  }

  100% {
    @include opacity(0.0);
    @include transform(scale(1.2, 1.2));
  }
}


// ----- button styles
@mixin button-styles($t-color, $t-shadow, $bg-top, $bg-bottom, $border-color) {
  color: $t-color;
  text-shadow: 0 1px 1px $t-shadow;
  @include background-image (linear-gradient($bg-top, $bg-bottom));
  border-color: $border-color;
}

.m-button {
  @include box-shadow(inset 0 0 2px white);
  position: relative;
  display: inline-block;
  height: $base-line-height + 8;
  padding: 5px ($base-line-height / 2.5);
  font-size: 14px;
  line-height: normal;
  text-align: center;
  border-radius: 3px;
  border: 1px solid darken($grayscale-0, 15%); 
  outline: none;
  cursor: pointer;
  vertical-align: middle;

  @include button-styles($grayscale-4, hsla(100, 0%, 100%, 0.5), lighten($grayscale-0, 10%), $grayscale-0, darken($grayscale-0, 15%));

  //css3 transition
  @include transition(all .12s);

  &:hover {
    @include button-styles(darken($grayscale-4, 5%), hsla(100, 0%, 100%, 0.7), white, darken($grayscale-0, 4%), darken($grayscale-0, 12%));
  }

  &:focus {
    @include box-shadow(0 0 0 3px rgba($grayscale-5, 0.1), inset 0 0 2px white);
    border-color: darken($grayscale-0, 22%);
    outline: none;
  }

  &:active {
    @include button-styles(darken($grayscale-4, 5%), hsla(100, 0%, 100%, 0.5), lighten($grayscale-0, 2%), lighten($grayscale-0, 2%), darken($grayscale-0, 17%));
    @include box-shadow(inset 0 0 2px white);
  }
}

.m-button--primary {
  @extend .m-button;
  font-weight: 400;
  @include button-styles(white, hsla(0, 0%, 0%, 0.2), lighten($centro-brand-1b, 10%), $centro-brand-1b, darken($centro-brand-1b, 4%));
  @include box-shadow(inset 0 0 2px rgba(white, .5));

  &:hover {
    @include button-styles(white, hsla(0, 0%, 0%, 0.2), lighten($centro-brand-1b, 19%), $centro-brand-1b, darken($centro-brand-1b, 3%));
  }

  &:focus {
    border-color: darken($centro-brand-1b, 6%);
    @include box-shadow(0 0 0 3px rgba($centro-brand-1b, 0.30), inset 0 0 2px rgba(white, .5));
  }

  &:active {
    @include button-styles(white, hsla(0, 0%, 0%, 0.3), lighten($centro-brand-1b, 3.5%), lighten($centro-brand-1b, 3.5%), darken($centro-brand-1b, 5%));
    @include box-shadow(inset 0 0 2px rgba(white, .5));
  }

  &.m-button--small {
    font-weight: 400;
  }
}

.m-button--secondary {
  @extend .m-button;  
  @include button-styles(white, hsla(0, 0%, 0%, 0.2), lighten($centro-green, 6%), $centro-green, darken($centro-green, 3%));

  &:hover {
    @include button-styles(white, hsla(0, 0%, 0%, 0.2), lighten($centro-green, 10%), $centro-green, darken($centro-green, 2%));
  }

  &:focus {
    border-color: darken($centro-green, 4%);
    @include box-shadow(0 0 0 3px rgba($centro-green, 0.32));
  }

  &:active {
    @include button-styles(white, hsla(0, 0%, 0%, 0.3), lighten($centro-green, 4%), lighten($centro-green, 4%), darken($centro-green, 4%));
    @include box-shadow(none);
  }
}

.m-button[disabled],
.m-button.disabled {
  &,
  &:hover,
  &:active {
    cursor: not-allowed;
    @include button-styles($grayscale-2, hsla(100, 0%, 100%, 0.5), lighten($grayscale-0, 6%), lighten($grayscale-0, 6%), $grayscale-1)
  }
}

.m-button--small {
  height: ($base-line-height + 2);
  padding: 4px ($base-line-height / 3);
  font-size: 12px;
  line-height: normal;
}

.m-button--large {
  height: ($base-line-height + 12);
  padding: 6px ($base-line-height / 3);
  font-size: 16px;
  line-height: normal;
}

