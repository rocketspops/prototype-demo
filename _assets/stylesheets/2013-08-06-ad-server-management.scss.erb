
/* @group Header */

.header {
  background: url(<%= asset_data_uri '2013-08-06-ad-server-management-header_snippet.png' %>) no-repeat;
  position: relative;
  height: 96px;
  width: 561px;
}

.header a {
  outline: none;
  position: absolute;
}

.header--trigger {
  height: 16px;
  left: 93px;
  top: 57px;
  width: 134px;
}

/* @end */

/* @group Overlay */

.overlay {
  background: rgba(255,255,255, 0.8);
  display: none;
  height: 100%;
  font-size: 0;
  overflow: hidden;
  position: fixed;
  right: 0;
  bottom: 0;
  left: 0;
  top: 0;
  text-align: center;
  z-index: 10;
}

.overlay:after {
  content: '';
  display: inline-block;
  height: 100%;
  vertical-align: middle;
}

.overlay__container {
  box-shadow: 0px 2px 4px rgba(0,0,0,0.1);
  display: inline-block;
  border: 1px solid #CBCBCB;
  background: white url(<%= asset_data_uri '2013-08-06-ad-server-management-edit_overlay.png' %>) no-repeat center 15px;
  font-size: 1rem;
  vertical-align: middle;
  width: 708px;
  padding: 20px;
  position: relative;
  text-align: left;
}

.overlay__close {
  position: absolute;
  width: 35px;
  top: 14px;
  height: 16px;
  right: 16px;
}

.overlay__row-wrapper {
  position: relative;
  margin-top: 147px;
  left: -1px;
}

.overlay__row-wrapper ul {
  list-style-type: none;
}

.overlay__row-wrapper li {
  position: relative;
  margin-bottom: 10px;
}

.overlay__row-wrapper li:last-child {
  margin-bottom: 0;
}

.overlay__row-wrapper .close {
  position: absolute;
  top: 7px;
  left: 650px;
  height: 15px;
  width: 15px;
}

.overlay__row-wrapper input {
  background: transparent;
  border: none;
  outline: none;
  padding: 0 8px;
  position: absolute;
  top: 0;
  left: 0;
  height: 30px;
  width: 200px;
}

/* @end */

/* @group Tooltip */

.tooltip {
  background: url(<%= asset_data_uri '2013-08-06-ad-server-management-campaign_details_tooltip.png' %>) no-repeat center top;
  cursor: pointer;
  display: none;
  height: 376px;
  position: absolute;
    left: 77px;
    top: 77px;
  width: 350px;
}

.header--trigger:hover + .tooltip,
.tooltip:hover { display: block; }

.tooltip:before {
  content: "";
  height: 20px;
  position: absolute;
    top: -5px;
  width: 100%;
}

.tooltip--edit {
  height: 16px;
  left: 286px;
  top: 141px;
  width: 30px;
}

.tooltip--notes {
  left: 177px;
  top: 164px;
  height: 16px;
  width: 16px;
}

.tooltip--img {
  display: none;
  position: relative;
  top: 16px;
  left: -8px;
}

/* @end */

/* @group jQuery Overrides */

.ui-menu {
  display:block;
  list-style:none;
  margin: 0;
  padding: 2px;
}

.ui-menu .ui-menu { margin-top: -3px; }

.ui-menu .ui-menu-item {
  margin:0;
  padding: 0;
  width: 100%;
}

.ui-menu .ui-menu-item a {
  color: rgb(50,50,50);
  display:block;
  line-height:1.5;
  margin: 0;
  padding:.2em .4em;
  text-decoration:none;
  zoom:1;
}

.ui-menu .ui-menu-item a:hover { color: white; }

.ui-menu .ui-menu-item a.ui-state-hover,
.ui-menu .ui-menu-item a.ui-state-active { margin: -1px; }

.ui-menu {
  display: block;
  list-style: none;
  margin: 0;
  outline: none;
  padding: 2px;
}

.ui-autocomplete {
  background:  white;
  border-radius: 0;
  border: 1px solid #c5c5c5;
  border-top: none;
  color: rgb(50,50,50);
  cursor: pointer;
  font-family: "source-sans-pro";
  font-size: 1rem;
  padding: 0px;
  position: absolute;
  z-index: 100;
}

.ui-state-focus {
  background: #00a6da;
  border-radius: 0;
  border: none;
  color: white !important;
}

.ui-helper-hidden-accessible { display: none; }

/* @end */
