@import "compass";
@import "base";

ul { 
 list-style-type: none;
}

.header {
  border: 1px solid rgb(140,140,140); 
  position: relative;
  a.trigger {
    position: absolute;
    width: 30px;
    height: 30px;
    right: 62px;
    top: 0;
  }
}

.tooltip {
  background: url(<%= asset_data_uri '2013-09-16-reminders-tooltip-background.png' %>) no-repeat;
  font-size: 14px;
  height: 471px; 
  width: 618px;
  overflow: hidden;
  position: relative;
    top: 6px;
    left: 144px;
}

.tooltip-header {
  width: 608px;
  height: 48px;
  border-bottom: 1px solid rgb(220,220,220);
  position: relative;
  left: 5px;
  top: 10px;
}

.tooltip-header > ul {
  color: rgb(180,180,180);
  list-style-type: none;
  font-weight: 300;
  font-size: 20px;
  padding-left: 15px;
  li { 
    cursor: pointer;
    float: left; 
    line-height: 48px;
    margin-right: 15px;
    position: relative;
    &:last-child { margin: 0; }
    &.active { color: $centro-gray-1; }
    &.active:after { 
      content: url(<%= asset_data_uri '2013-09-16-reminders-triangle-carat.png' %>);
      height: 8px;
      position: absolute;
      bottom: -1px;
      margin-left: -6px;
      left: 50%;
      line-height: 0;
      width: 12px; 
    }
  }
}

.tooltip-sidebar {
  background: rgb(240,240,240);
  border-right: 1px solid rgb(210,210,210);
  color: rgb(180,180,180);
  float: left;
  display: inline-block;
  padding: 15px;
  position: relative;
    left: 5px;
    top: 10px;
  height: 406px;
  width: 223px;
}

.tooltip-sidebar button {
  @include background(linear-gradient(white, rgb(220,220,220)));
  @include border-radius(3px);
  color: rgb(80,80,80);
  border: 1px solid rgb(180,180,180);
  position: absolute;
  bottom: 15px;
  &:active {
    background: rgb(220,220,220);
  }
}

.tooltip-nav, 
.tooltip-nav ul {
  list-style-type: none;
}

.tooltip-nav > li li a {
  color: rgb(180,180,180);
}

.tooltip-nav > li li a:hover, 
.tooltip-nav > li:not(.locked) span:hover {
  color: rgb(140,140,140);
}

.tooltip-nav > li {
  cursor: pointer;
  position: relative;
  padding-left: 8px;
}

.tooltip-nav > li:after {
  background: url(<%= asset_data_uri '2013-09-16-reminders-direction-arrows.png' %>) no-repeat center 2px;
  content: "";
  height: 9px;
  overflow: hidden;
  position: absolute;
  top: 7px;
  left: -5px;
  width: 9px;
  text-align: center;
}

.tooltip-nav > li.closed:after { background-position: center -7px; }
.tooltip-nav > li.closed > ul { display: none; }

.tooltip-nav li, 
.tooltip-nav ul li { line-height: 24px; }

.tooltip-nav ul {
  margin-left: 20px;
}

.tooltip-nav ul li {
  border-color: transparent;
  border-style: solid;
  border-width: 1px 0;
  cursor: pointer;

  &.active { 
    background: rgb(220,220,220); 
    border-color: rgb(210,210,210);
    margin: 0 -15px 0 -43px;
    padding-left: 43px;
    a { color: rgb(50,50,50); }
  }
}

.tooltip-main {
  height: 406px;
  width: 385px;
  position: relative;
  right: 5px;
  top: 10px;
  float:right;
}

.tooltip-main div {
  background: white;
  height: 100%;
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
}             

.tooltip-main .is-visible {
  z-index: 10;
}

ul.to-dos li {
  border-bottom: 1px solid rgb(220,220,220);
  line-height: 30px;
  height: 30px;
  padding-left: 10px;
}

ul.to-dos li > input[type="checkbox"] {
  cursor: pointer;
  margin-right: 10px;
}

ul.to-dos li > label {
  cursor: pointer;
  &.checked {
    color: rgb(180,180,180);
    text-decoration: line-through;
  }
}
