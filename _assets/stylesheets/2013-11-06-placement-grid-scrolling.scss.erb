@import "compass";
@import "base";

.app {
  position: relative;
  width: 1220px;
  height: 782px !important;
  margin: 0 auto;
  border: 1px solid $grayscale-0;
  overflow: hidden;
}

.header {
  z-index: 3;
  display: block;
  position: absolute;
    top: 0;
    left: 0;
  width: 100%;
  height: 174px;
  background: url(<%= asset_data_uri '2013-11-06-placement-grid-scrolling-app-header.png' %>) no-repeat;
}

.white-box {
  z-index: 4;
  display: block;
  position: absolute;
    top: 721px;
    left: 400px;
  width: 20px;
  height: 62px;
  background: white;
}

.fixed {
  z-index: 2;
  display: block;
  position: absolute;
    top: 174px;
    left: 0;
  width: 403px;
  height: 607px;
  background: url(<%= asset_data_uri '2013-11-06-placement-grid-scrolling-fixed.png' %>) no-repeat;
  border-right: 1px solid $grayscale-0;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

.scroll-viewport {
  z-index: 1;
  position: absolute;
    top: 174px;
  width: 815px;
  height: 607px;
  margin-left: 403px;
  overflow-x: auto;
  overflow-y: hidden;
}

.scroll-img {
  display: block;
  width: 1389px;
  height: 607px;
  background: url(<%= asset_data_uri '2013-11-06-placement-grid-scrolling-scroll.png' %>) no-repeat;
}

