@import "compass";

.header {
  background: url(<%= asset_data_uri '2013-08-16-campaign-notes-header.png' %>) no-repeat;
  position: relative;
  height: 96px;
  width: 561px;
}

.header a {
  outline: none;
  position: absolute;
}

.header--trigger {
  height: 16px;
  right: 159px;
  top: 57px;
  width: 60px;
}

.overlay {
  background: rgba(255,255,255, 0.8);
  display: none;
  height: 100%;
  font-size: 0;
  overflow: hidden;
  position: fixed;
  right: 0;
  bottom: 0;
  left: 0;
  top: 0;
  text-align: center;
  z-index: 10;
}

.overlay:after {
  content: '';
  display: inline-block;
  height: 100%;
  vertical-align: middle;
}

.overlay__container {
  box-shadow: 0px 2px 4px rgba(0,0,0,0.1);
  display: inline-block;
  border: 1px solid #CBCBCB;
  background-color: white;
  font-size: 1rem;
  vertical-align: middle;
  width: 500px;
  position: relative;
  text-align: left;
}

.overlay__header {
  margin-bottom: 30px;
  padding: 20px 20px 0 20px;
}

.overlay__close {
  background: url(<%= asset_data_uri '2013-08-16-campaign-notes-delete-btn.png' %>) no-repeat center center;
  position: absolute;
  width: 14px;
  top: 10px;
  height: 14px;
  right: 8px;
}

.overlay__header h1 {
  font-size: 32px;
  font-weight: 300;
  line-height: 1;
  margin: 0;
}

.overlay__body {
    background:
  /* Shadow covers */
  linear-gradient(white 30%, rgba(white,0)),
  linear-gradient(rgba(white,0), white 70%) 0 100%,
  /* Shadows */
  radial-gradient(farthest-side at 50% 0, rgba(black,0.2), rgba(black,0)),
  radial-gradient(farthest-side at 50% 100%, rgba(black,0.2), rgba(black,0)) 0 100%;
  background-repeat: no-repeat;
  background-color: white;
  background-size: 100% 40px, 100% 40px, 100% 5px, 100% 5px;
  background-attachment: local, local, scroll, scroll;
  //background-position: center top;
  margin-right: 2px;
  padding: 0 18px 0 20px;
  max-height: 360px;
  overflow: auto; 
}

.overlay__body ul {
  list-style-type: none;
  font-size: 14px;
  line-height: 18px;
}

.overlay__body li {
  display: table;
  vertical-align: top;
  margin-bottom: 30px;
  position: relative;
}

.overlay__body li div {
  display: table-cell;
  padding-right: 20px;
  &:last-child {
    padding: 0;
  }
}

.overlay__body li div.link {
  font-size: 0;
  width: 50px;
  top: 5px;
  position: relative;
  > span {
    font-size: 14px;
    height: 16px;
    width: 16px;
    display: block;
    background: url(<%= asset_data_uri '2013-08-16-campaign-notes-flag-icons.png' %>) no-repeat center top;
    &.s-is-flag-hovered,
    &.s-is-flag-clicked { background-position: center -16px; }
  }
  a {
    position: absolute;
    height: 16px;
    width: 16px;
    top: 0px;
  }
}

.overlay__body .note {
  width: 100%;
}

.overlay__body .name {
  color: rgb(150,150,150);
  i { 
    color: rgb(230,230,230);
    font-style: normal; 
    margin: 0 4px;
  }
  span {
    @include opacity(0);
    @include transition(opacity linear 0.1s);
    color: rgb(200,200,200);
    font-size: 12px;
    line-height: 20px;
    a { color: rgb(200,200,200); }
    a:hover { color: #C30D3D; }
  }
}

li:hover .name span { @include opacity(1); }

.overlay__footer {
  @include pie-clearfix;
  background: rgb(240, 240, 240);
  border-top: 1px solid rgb(203, 203, 203);
  font-size: 0;
  height: 72px;
  padding: 18px 20px;
  position: relative;
}

.overlay__footer {
  input:focus + .clickable {
    display: none;
  }
}

.overlay__footer input {
  background: white;
  border: 1px solid rgb(203, 203, 203);
  font-size: 14px;
  height: 36px;
  padding: 0 8px;
  position: relative;
  left: -1px;
  outline: none;
  width: 369px;
  float: left;
  &.error { border: 1px solid rgb(210, 30, 133); }
}

.overlay__footer button {
  @include border-radius(3px);
  @include background-image (linear-gradient(rgb(0, 186, 246), rgb(0, 166, 221)));
  border: 1px solid rgb(0, 148, 198);
  color: white;
  font-size: 16px;
  height: 36px;
  line-height: 30px;
  width: 70px;
  padding: 3px 6px;
  position: relative;
  float: right;
}
